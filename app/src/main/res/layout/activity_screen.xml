<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ScreenActivity">

    <include layout="@layout/toolbar" />

    <!--分辨率-->
    <TextView
        android:id="@+id/tvResolution"
        style="@style/MiddleGrayTextStyle" />

    <!--屏幕密度-->
    <TextView
        android:id="@+id/tvDensity"
        style="@style/MiddleGrayTextStyle"
        android:layout_marginTop="5dp" />

    <!--Dpi-->
    <TextView
        android:id="@+id/tvDpi"
        style="@style/MiddleGrayTextStyle"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btnLandscape"
        android:text="横屏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnPortrait"
        android:text="竖屏"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--屏幕方向-->
    <TextView
        android:id="@+id/tvOrientation"
        style="@style/MiddleGrayTextStyle"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tvBright"
        android:layout_marginBottom="5dp"
        android:text="调节屏幕亮度："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <SeekBar
        android:progress="50"
        android:id="@+id/seekBar"
        android:min="0"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>